/* page/posts/post-detail/post-detail.wxss */
.container {
  display: flex;
  flex-direction: column;
}

.head-img {
  width: 100%;
  height: 460rpx;
}

@-webkit-keyframes rotate{
  to {-webkit-transform: rotate(360deg)}
}

.audio {
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;
  margin-left: -51rpx;
  top: 175rpx;
  -webkit-animation: rotate 5s linear infinite;
}

.rotate-running {
  -webkit-animation-play-state: running;
}

.rotate-paused {
  -webkit-animation-play-state: paused;
}

.author-date {
  flex-direction: row;
  margin-left: 30rpx;
  margin-top: 20rpx;
}

.avatar {
  height: 64rpx;
  width: 64rpx;
  vertical-align: middle;
}

.author {
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  vertical-align: middle;
  color: #666;
}

.const-text {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}

.date {
  font-size: 24rpx;
  margin-left: 30rpx;
  vertical-align: middle;
  color: #999;
}

.title {
  margin-left: 40rpx;
  font-size: 36rpx;
  font-weight: 700;
  margin-top: 30rpx;
  letter-spacing: 2px;
  color: #4b556c;
}

.tool {
  margin-top: 20rpx;
  margin: 0 30rpx;
}

.horizontal-line {
  width: 100%;
  height: 1px;
  background-color: #e5e5e5;
  position: relative;
  top: 46rpx;
  z-index: -99;
}

.conlleciont-share-img {
  float: right;
  font-size: 0;
}

.conlleciont-share-img image {
  width: 90rpx;
  height: 90rpx;
}

.conlleciont-share-img .collection-img {
  margin-right: 20rpx;
}

.article {
  color: #666;
  margin: 20rpx 30rpx;  
  line-height: 44rpx;
  letter-spacing: 2px;
}
